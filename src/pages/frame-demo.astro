---
import MainLayout from '../layouts/MainLayout.astro';
import Frame from '../components/common/Frame.astro';
---

<MainLayout title="Frame Test - Content Positioning">
  <main class="min-h-screen bg-gray-100 p-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold text-center mb-8">Frame Content Positioning Demo</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Extra Small Frame -->
        <div class="text-center">
          <h3 class="text-lg font-semibold mb-4 text-blue-700">XS Frame</h3>
          <Frame size="xs" color="blue" class="mx-auto">
            <div class="  p-1 ">
              <p class="text-xs font-bold">XS Content</p>
              <p class="text-xs">Should fit perfectly</p>
            </div>
          </Frame>
        </div>
        
        <!-- Small Frame -->
        <div class="text-center">
          <h3 class="text-lg font-semibold mb-4 text-blue-700">Small Frame</h3>
          <Frame size="sm" color="blue" class="mx-auto">
            <div class="">
              <p class="text-sm font-bold">Small Content</p>
              <p class="text-xs">Should not overflow</p>
            </div>
          </Frame>
        </div>
        
        <!-- Medium Frame -->
        <div class="text-center">
          <h3 class="text-lg font-semibold mb-4 text-purple-700">Medium Frame</h3>
          <Frame size="md" color="purple" class="mx-auto">
            <div class=" ">
              <p class="text-base font-bold">Medium Content</p>
              <p class="text-xs">Should be properly positioned</p>
            </div>
          </Frame>
        </div>
        
        <!-- Large Frame -->
        <div class="text-center">
          <h3 class="text-lg font-semibold mb-4 text-purple-700">Large Frame</h3>
          <Frame size="lg" color="purple" class="mx-auto">
            <div class=" ">
              <p class="text-lg font-bold">Large Content</p>
              <p class="text-sm">Should fit well in large frame</p>
              <p class="text-xs mt-1">No overflow</p>
            </div>
          </Frame>
        </div>
      </div>      
    </div>
  </main>
</MainLayout>
