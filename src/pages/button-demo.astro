---
import MainLayout from '../layouts/MainLayout.astro';
import ButtonFd from '../components/common/ButtonFd.astro';
import ButtonRpkm from '../components/common/ButtonRpkm.astro';
import { 
  Download, 
  Check, 
  X, 
  Play, 
  Star, 
  Heart, 
  Settings, 
  Upload, 
  ArrowRight, 
  Plus,
  Minus,
  Search,
  User,
  Home,
  Mail
} from '@lucide/astro';

// All available colors
const colors = ['light-beige', 'light-pink', 'vivid-pink', 'light-blue', 'light-green', 'black', 'beige'] as const;
const sizes = ['sm', 'md', 'lg'] as const;
const variants = ['fill', 'stroke'] as const;

// RPKM specific configurations
const rpkmColors = ['purple', 'blue', 'pink', 'black'] as const;
const rpkmSizes = ['xs', 'sm', 'md', 'lg'] as const;
---

<MainLayout title="Button Components Demo">
  <main class="min-h-screen bg-gray-900 text-white py-8">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-8 text-center">Button Components Demo</h1>
      
      <!-- RPKM Button Components -->
      <section class="mb-24">
        <h2 class="text-4xl font-semibold mb-12 text-center text-cyan-400">ButtonRpkm Components</h2>
        
        <!-- RPKM Basic Usage Examples -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Basic Usage Examples</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            
            <!-- No Icon -->
            <div class="space-y-4 p-6 bg-gray-800 rounded-lg">
              <h4 class="text-lg font-medium text-cyan-300">No Icon</h4>
              <ButtonRpkm variant="fill" color="purple" size="md">
                Click Me
              </ButtonRpkm>
              <pre class="text-xs bg-gray-700 p-2 rounded"><code>{`<ButtonRpkm variant="fill" color="purple">
  Click Me
</ButtonRpkm>`}</code></pre>
            </div>
            
            <!-- With Icon -->
            <div class="space-y-4 p-6 bg-gray-800 rounded-lg">
              <h4 class="text-lg font-medium text-cyan-300">With Icon</h4>
              <ButtonRpkm variant="fill" color="blue" size="md">
                <Download slot="icon" size={20} class="mr-2" />
                Download
              </ButtonRpkm>
              <pre class="text-xs bg-gray-700 p-2 rounded"><code>{`<ButtonRpkm variant="fill" color="blue">
  <Download slot="icon" size={20} class="mr-2" />
  Download
</ButtonRpkm>`}</code></pre>
            </div>
            
            <!-- Different Icons -->
            <div class="space-y-4 p-6 bg-gray-800 rounded-lg">
              <h4 class="text-lg font-medium text-cyan-300">Different Icons</h4>
              <div class="space-y-2">
                <ButtonRpkm variant="stroke" color="pink" size="sm">
                  <Play slot="icon" size={16} class="mr-2" />
                  Play
                </ButtonRpkm>
                <ButtonRpkm variant="fill" color="black" size="sm">
                  <Star slot="icon" size={16} class="mr-2" />
                  Favorite
                </ButtonRpkm>
              </div>
              <pre class="text-xs bg-gray-700 p-2 rounded"><code>{`<ButtonRpkm variant="stroke" color="pink">
  <Play slot="icon" size={16} class="mr-2" />
  Play
</ButtonRpkm>`}</code></pre>
            </div>
          </div>
        </div>
        
        <!-- RPKM All Colors and Variants -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">All Colors and Variants</h3>
          
          {variants.map(variant => (
            <div class="mb-12">
              <h4 class="text-xl font-medium mb-6 capitalize">{variant} Variant</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {rpkmColors.map(color => (
                  <div class="space-y-4">
                    <p class="text-sm text-gray-300 capitalize">{color}</p>
                    
                    <!-- Normal state with icon -->
                    <ButtonRpkm variant={variant} color={color} size="md">
                      <Download slot="icon" size={20} class="mr-2" />
                      {color}
                    </ButtonRpkm>
                    
                    <!-- Disabled state -->
                    <ButtonRpkm variant={variant} color={color} size="md" disabled>
                      <Settings slot="icon" size={20} class="mr-2" />
                      Disabled
                    </ButtonRpkm>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
        
        <!-- RPKM Size Variations -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Size Variations</h3>
          
          {rpkmSizes.map(size => (
            <div class="mb-8">
              <h4 class="text-lg font-medium mb-4 capitalize">Size: {size}</h4>
              <div class="flex flex-wrap gap-4 items-end">
                <ButtonRpkm variant="fill" color="purple" size={size}>
                  <Download slot="icon" size={size === 'xs' ? 16 : size === 'sm' ? 18 : size === 'md' ? 20 : 24} class="mr-2" />
                  {size.toUpperCase()}
                </ButtonRpkm>
                <ButtonRpkm variant="stroke" color="blue" size={size}>
                  <Play slot="icon" size={size === 'xs' ? 16 : size === 'sm' ? 18 : size === 'md' ? 20 : 24} class="mr-2" />
                  {size.toUpperCase()}
                </ButtonRpkm>
                <ButtonRpkm variant="fill" color="pink" size={size}>
                  No Icon
                </ButtonRpkm>
              </div>
            </div>
          ))}
        </div>
        
        <!-- RPKM Icon Showcase -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Icon Showcase</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            <ButtonRpkm variant="fill" color="purple" size="sm">
              <Download slot="icon" size={18} class="mr-2" />
              Download
            </ButtonRpkm>
            <ButtonRpkm variant="fill" color="blue" size="sm">
              <Upload slot="icon" size={18} class="mr-2" />
              Upload
            </ButtonRpkm>
            <ButtonRpkm variant="fill" color="pink" size="sm">
              <Play slot="icon" size={18} class="mr-2" />
              Play
            </ButtonRpkm>
            <ButtonRpkm variant="fill" color="black" size="sm">
              <Star slot="icon" size={18} class="mr-2" />
              Star
            </ButtonRpkm>
            <ButtonRpkm variant="stroke" color="purple" size="sm">
              <Heart slot="icon" size={18} class="mr-2" />
              Like
            </ButtonRpkm>
            <ButtonRpkm variant="stroke" color="blue" size="sm">
              <Settings slot="icon" size={18} class="mr-2" />
              Settings
            </ButtonRpkm>
            <ButtonRpkm variant="stroke" color="pink" size="sm">
              <ArrowRight slot="icon" size={18} class="mr-2" />
              Next
            </ButtonRpkm>
            <ButtonRpkm variant="stroke" color="black" size="sm">
              <Plus slot="icon" size={18} class="mr-2" />
              Add
            </ButtonRpkm>
          </div>
        </div>
      </section>
      
      <!-- FD Button Components -->
      <section class="mb-24">
        <h2 class="text-4xl font-semibold mb-12 text-center text-pink-400">ButtonFd Components</h2>
        
        <!-- FD Basic Usage Examples -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Usage Examples</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            
            <!-- No Icon -->
            <div class="space-y-4 p-6 bg-gray-800 rounded-lg">
              <h4 class="text-lg font-medium text-pink-300">No Icon</h4>
              <ButtonFd variant="fill" color="light-beige" size="md">
                Click Me
              </ButtonFd>
              <pre class="text-xs bg-gray-700 p-2 rounded"><code>{`<ButtonFd variant="fill" color="light-beige">
  Click Me
</ButtonFd>`}</code></pre>
            </div>
            
            <!-- With Icon -->
            <div class="space-y-4 p-6 bg-gray-800 rounded-lg">
              <h4 class="text-lg font-medium text-pink-300">With Icon</h4>
              <ButtonFd variant="fill" color="vivid-pink" size="md">
                <Download slot="icon" size={18} class="mr-2" />
                Download
              </ButtonFd>
              <pre class="text-xs bg-gray-700 p-2 rounded"><code>{`<ButtonFd variant="fill" color="vivid-pink">
  <Download slot="icon" size={18} class="mr-2" />
  Download
</ButtonFd>`}</code></pre>
            </div>
            
            <!-- With Registration Status -->
            <div class="space-y-4 p-6 bg-gray-800 rounded-lg">
              <h4 class="text-lg font-medium text-pink-300">With Status</h4>
              <ButtonFd variant="fill" color="light-blue" size="md" registrationStatus="registered">
                <User slot="icon" size={18} class="mr-2" />
                Registered
              </ButtonFd>
              <pre class="text-xs bg-gray-700 p-2 rounded"><code>{`<ButtonFd registrationStatus="registered">
  <User slot="icon" size={18} class="mr-2" />
  Registered
</ButtonFd>`}</code></pre>
            </div>
          </div>
        </div>
        
        <!-- FD Fill Variants -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Fill Variants - All Colors</h3>
          <div class="w-full px-4 py-2 text-start bg-amber-50 text-amber-600 border-l-8 border-amber-500 mb-10">
            <p class="text-lg font-semibold">Note</p>
            <p>ตัว FD button ใช้ SVG Background/Border Pattern แต่ยังมีปัญหาตรงที่อ่านสเปคใน figma แล้วเหมือน behavior ของปุ่มยังไม่ชัดเจนเวลากด อยากให้เช็คหรือลองบอกสเปคเพิ่มได้ไหมครับ</p>
          </div>
          
          {sizes.map(size => (
            <div class="mb-12">
              <h4 class="text-xl font-medium mb-6 capitalize">Size: {size}</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-8 gap-4">
                {colors.map(color => (
                  <div class="space-y-2">
                    <p class="text-sm text-gray-300 capitalize">{color.replace('-', ' ')}</p>
                    <ButtonFd variant="fill" color={color} size={size}>
                      <Download slot="icon" size={size === 'sm' ? 16 : size === 'md' ? 18 : 20} class="mr-2" />
                      Label
                    </ButtonFd>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
        
        <!-- FD Stroke Variants -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Stroke Variants - All Colors</h3>
          
          {sizes.map(size => (
            <div class="mb-12">
              <h4 class="text-xl font-medium mb-6 capitalize">Size: {size}</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-8 gap-4">
                {colors.map(color => (
                  <div class="space-y-2">
                    <p class="text-sm text-gray-300 capitalize">{color.replace('-', ' ')}</p>
                    <ButtonFd variant="stroke" color={color} size={size}>
                      <Upload slot="icon" size={size === 'sm' ? 16 : size === 'md' ? 18 : 20} class="mr-2" />
                      Label
                    </ButtonFd>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
        
        
        <!-- FD Disabled States -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Disabled States</h3>
          
          {variants.map(variant => (
            <div class="mb-8">
              <h4 class="text-xl font-medium mb-6 capitalize">{variant} Variant - Disabled</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-8 gap-4">
                {colors.map(color => (
                  <div class="space-y-2">
                    <p class="text-sm text-gray-300 capitalize">{color.replace('-', ' ')}</p>
                    <ButtonFd variant={variant} color={color} size="md" disabled>
                      <Download slot="icon" size={18} class="mr-2" />
                      Disabled
                    </ButtonFd>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
        
        <!-- FD Registration Status Examples -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Registration Status</h3>
          
          <div class="space-y-8">
            <div>
              <h4 class="text-xl font-medium mb-6">Registered Status</h4>
              <div class="flex gap-4">
                <ButtonFd variant="fill" color="light-beige" size="lg" registrationStatus="registered">
                  <Download slot="icon" size={20} class="mr-2" />
                  Registered
                </ButtonFd>
                <ButtonFd variant="fill" color="light-pink" size="lg" registrationStatus="registered">
                  <Download slot="icon" size={20} class="mr-2" />
                  Registered
                </ButtonFd>
              </div>
            </div>
            
            <div>
              <h4 class="text-xl font-medium mb-6">Not Registered Status</h4>
              <div class="flex gap-4">
                <ButtonFd variant="fill" color="light-beige" size="lg" registrationStatus="not-registered">
                  <Download slot="icon" size={20} class="mr-2" />
                  Not Registered
                </ButtonFd>
                <ButtonFd variant="fill" color="light-pink" size="lg" registrationStatus="not-registered">
                  <Download slot="icon" size={20} class="mr-2" />
                  Not Registered
                </ButtonFd>
              </div>
            </div>
          </div>
        </div>
        
        <!-- FD Size Comparison -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Size Comparison</h3>
          <div class="space-y-8">
            {colors.slice(0, 4).map(color => (
              <div>
                <h4 class="text-lg font-medium mb-4 capitalize">{color.replace('-', ' ')}</h4>
                <div class="flex items-end gap-4">
                  <ButtonFd variant="fill" color={color} size="sm">
                    <Download slot="icon" size={16} class="mr-2" />
                    Small
                  </ButtonFd>
                  <ButtonFd variant="fill" color={color} size="md">
                    <Download slot="icon" size={18} class="mr-2" />
                    Medium
                  </ButtonFd>
                  <ButtonFd variant="fill" color={color} size="lg">
                    <Download slot="icon" size={20} class="mr-2" />
                    Large
                  </ButtonFd>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <!-- FD No Icon Examples -->
        <div class="mb-16">
          <h3 class="text-2xl font-semibold mb-8">Text Only (No Icons)</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            {colors.slice(0, 8).map(color => (
              <ButtonFd variant="fill" color={color} size="md">
                {color.replace('-', ' ').split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')}
              </ButtonFd>
            ))}
          </div>
        </div>
      </section>
    </div>
  </main>
</MainLayout>