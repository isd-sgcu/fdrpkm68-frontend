    // House Filter Function
    function filterHouseCards(size: string, nameSearch: string) {
      const houseCards = houseCardContainer?.querySelectorAll("[data-size]");
      if (!houseCards) return;

      const searchLower = nameSearch.trim().toLowerCase();

      houseCards.forEach(card => {
        const cardSize = card.getAttribute("data-size") || "";
        // Read both Thai and English names from data-attributes
        const thName = (card.getAttribute("data-thname") || "").toLowerCase();
        const enName = (card.getAttribute("data-enname") || "").toLowerCase();

        const sizeMatch = size === "‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î" || cardSize === size;
        // Match if search is in either name
        const nameMatch = !searchLower || thName.includes(searchLower) || enName.includes(searchLower);

        if (sizeMatch && nameMatch) {
          card.classList.remove("hidden");
        } else {
          card.classList.add("hidden");
        }
      });
