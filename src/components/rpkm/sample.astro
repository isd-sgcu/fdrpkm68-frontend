---
import Navbar from "@rpkm/components/navbar.astro";
import "@rpkm/styles/styles.css"
import Footer from "@rpkm/components/footer.astro";
import HousePicker from "@rpkm/components/house-picker.astro"
import GroupPicker from "@rpkm/components/group-picker.astro";
import Profile from "@rpkm/components/profile.astro";
---

<div class="relative w-[393px] mx-auto my-0 h-fit min-h-[100vh] bg-gradient-to-bl from-[#667eea] to-[#764ba2] overflow-hidden font-ibmplex">
    <Navbar/>
    <div class="bg-[url('/images/rpkm/bg-rpkm.png')] bg-cover bg-no-repeat w-full h-fit pt-5 pb-12 flex flex-col gap-5 items-center">
        <!-- Logo -->
        <img src="/images/rpkm/freshmen-fest-logo.svg" class="w-[301.182px] h-[136px]" />

        <!-- Profile -->
        <Profile />
        
        <!-- House -->
        <HousePicker />

        <!-- Group -->
        <GroupPicker />
    </div>
    <Footer/>
</div>