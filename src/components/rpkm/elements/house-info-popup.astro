---
const colors = [
  { size: "S", bgColor: "#0FF", textColor: "#000" },
  { size: "M", bgColor: "#FF1493", textColor: "#fff" },
  { size: "L", bgColor: "#FFB6C1", textColor: "#000" },
  { size: "XL", bgColor: "#D38DD8", textColor: "#000" },
  { size: "XXL", bgColor: "#2B2D42", textColor: "#fff" }
];

// Default color
const defaultColor = colors[0];
---

<!-- House Popup Overlay -->
<div
  id="view-house-popup"
  class="fixed inset-0 z-50 bg-[rgba(0,0,0,0.7)] translate-x-[9px] flex items-center justify-center transition-opacity duration-200 w-full min-h-[500px] hidden"
>
  <!-- House Popup Wrapper -->
  <div class="relative w-full max-w-md px-5">
    <!-- Pink trapezoids -->
    <div class="absolute left-5 top-1/2 -translate-y-1/2 w-full h-full bg-[#FF1493] z-10 trapezoid-l-1"></div>
    <div class="absolute right-5 top-1/2 -translate-y-1/2 w-full h-full bg-[#FF1493] z-10 trapezoid-r-1"></div>

    <!-- Border -->
    <div class="cut-houses-1 bg-[#8A2BE4] p-[1.5px] relative">
      <!-- Content -->
      <div
        class="relative cut-houses-1 bg-[#2B2D42BF] px-5 py-8 flex flex-col items-center min-h-[340px] h-fit"
        id="view-group-popup-content"
      >
        <!-- House Size -->
        <div
          id="house-size-badge"
          class="rounded-full absolute left-10 text-xl font-bold -translate-y-1 w-[40px] px-3 py-1 aspect-square flex justify-center items-center"
          style={`background-color: ${defaultColor.bgColor}; color: ${defaultColor.textColor};`}
        >
          S
        </div>

        <!-- House Image -->
        <img
          id="house-image"
          src="/images/rpkm/houses/house-blank.png"
          width="104"
          height="104"
          class="border border-white"
        />

        <!-- House People -->
        <div class="absolute right-10 flex items-center text-sm gap-[1px]">
          <p class="text-white">
            <span id="house-amount" style="color: #68A987;">0</span>/<span id="house-capacity">0</span>
          </p>
          <img src="/images/rpkm/person-icon-white.svg" width="18" height="18" />
        </div>

        <!-- House Thai Title -->
        <p id="house-thai-title" class="text-2xl pt-2 text-white font-bold">ชื่อบ้าน</p>

        <!-- House Thai Description -->
        <p id="house-thai-description" class="text-xs pt-3 text-white max-w-[250px] text-center">คำอธิบายบ้าน</p>

        <!-- House English Title -->
        <p id="house-eng-title" class="text-xl pt-3 text-white font-bold">House Name</p>

        <!-- House English Description -->
        <p id="house-eng-description" class="text-xs pt-3 text-white max-w-[250px] text-center">House Description</p>

        <!-- House Instagram -->
        <a 
          id="house-instagram-link"
          href="#"
          target="_blank"
          class="flex gap-2 pt-7 items-center cursor-pointer hover:opacity-80 transition-opacity"
        >
          <img src="/images/rpkm/instagram-icon.svg" width="20" height="20" />
          <p id="house-instagram" class="text-white font-medium">Instagram</p>
        </a>

        <!-- House Buttons -->
        <div class="flex gap-5 pt-7">
          <div class="filter z-20">
            <button
              id="btn-cancel-house"
              class="cut-edge-all border-4 border-[#00FFFF] bg-transparent cursor-pointer transition-all"
              type="button"
              style="width: 130px; height: 48px;"
            >
              <p id="btn-cancel-text" class="text-xl text-[#00FFFF] font-medium">ย้อนกลับ</p>
            </button>
          </div>
          <div class="filter drop-shadow-[0_0_6px_white] z-20">
            <button
              id="btn-add-house"
              class="cut-edge-all bg-[linear-gradient(90deg,_#00FFFF_0%,_#2B2D42_100%)] cursor-pointer transition-all"
              type="button"
              style="width: 130px; height: 48px;"
            >
              <p id="btn-add-text" class="text-xl text-white font-medium">เพิ่มบ้านนี้</p>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>