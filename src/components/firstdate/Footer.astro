---
import { cn } from "@/lib/utils";

interface Props {
  variant?: "firstdate" | "fest" | "other" | "firstdate-staff";
}

const { variant } = Astro.props;

const footerGradientVariant = {
  firstdate: "from-[#324B95] to-[#C6EBC5]",
  "firstdate-staff": "from-[#324B95] to-[#FFB6C1]",
  fest: "from-[#FFFFFF] to-[#F2048E]",
  other: "from-[#000000] to-[#FFFFFF]",
};

const footerGradient = variant
  ? footerGradientVariant[variant]
  : footerGradientVariant.other;
---

<footer class="text-xs">
  <div
    class={cn(
      "flex w-full flex-col items-center justify-center bg-gradient-to-b py-4 text-white",
      footerGradient
    )}
  >
    <div class="mb-3 flex w-full flex-row justify-center gap-x-1">
      <img src="/common/isd-logo.svg" alt="ISD Logo" class="h-10 w-auto" />
      <img
        src="/common/sgcu-logo.svg"
        alt="ISD Text Logo"
        class="h-10 w-auto"
      />
    </div>
    <div class="flex flex-col text-center">
      <p>พัฒนาโดยฝ่ายพัฒนาระบบสารสนเทศ</p>
      <p>องค์การบริหารสโมสรนิสิตจุฬาลงกรณ์มหาวิทยาลัย</p>
    </div>
    <hr class="m-2 h-1 w-[80px]" />
    <div class="flex flex-col text-center">
      <p>Developed by Information System Development &lt;ISD&gt;,</p>
      <p>Student Government Chulalongkorn University</p>
    </div>
  </div>
  <div
    class="flex w-full flex-col items-center justify-center bg-white py-4 text-black"
  >
    <p class="text-xl font-semibold">Contact Us</p>
    <div class="flex flex-row gap-x-2">
      <div class="mt-3 flex flex-col items-center gap-y-1">
        <a href="https://isd.sgcu.in.th" target="_blank">
          <img src="/common/isd-logo.svg" alt="ISD Logo" class="h-8 w-auto" />
        </a>
        <a
          href="https://isd.sgcu.in.th"
          target="_blank"
          class="font-semibold underline"
        >
          Website
        </a>
      </div>
    </div>
  </div>
</footer>
