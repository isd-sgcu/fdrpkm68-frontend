---
import { cn } from "@/lib/utils";

interface Props {
  href: string;
  className?: string;
}

const { href, className = "w-full" } = Astro.props;
---

<a
  href={href}
  class={cn(
    "flex items-center justify-center bg-white py-2 text-black transition-colors duration-200 hover:bg-gray-100",
    className
  )}
>
  <slot />
</a>
