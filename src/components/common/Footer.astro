---
import { cn } from "@/lib/utils"

interface Props {
  varient?: "firstdate" | "rpkm_home";
}

const bgGradient = {
  "firstdate": {
    type: "linear",
    classes: "bg-gradient-to-b from-[#324B95] to-[#C6EBC5]"
  },
  "rpkm_home": {
    type: "radial", 
    classes: "bg-[radial-gradient(50%_50%_at_50%_50%,_#8A2BE4_0%,_#2B2D42_100%)]"
  },
  "rpkm-workshops": {
    type: "linear",
    classes: "bg-gradient-to-b from-[#667eea] to-[#764ba2]"
  },
  "rpkm-rubpuen": {
    type: "linear",
    classes: "bg-gradient-to-b from-[#667eea] to-[#764ba2]"
  },
  "rpkm-eventSummary": {
    type: "linear",
    classes: "bg-gradient-to-b from-[#667eea] to-[#764ba2]"
  }
}

const { varient = "firstdate" } = Astro.props;

const footerGradient = bgGradient[varient].classes;
---

<footer class="text-xs">
  <div class={cn("w-full flex flex-col items-center justify-center py-4 text-white", footerGradient)}>
    <div class="flex flex-row justify-center w-full gap-x-1 mb-3">
      <img
        src="/common/isd-logo.svg"
        alt="ISD Logo"
        class="h-10 w-auto"
      />
      <img
        src="/common/sgcu-logo.svg"
        alt="ISD Text Logo"
        class="h-10 w-auto"
      />
    </div>
    <div class="text-center flex flex-col">
      <p>พัฒนาโดยฝ่ายพัฒนาระบบสารสนเทศ</p>
      <p>องค์การบริหารสโมสรนิสิตจุฬาลงกรณ์มหาวิทยาลัย</p>
    </div>
    <hr class="h-1 w-[80px] m-2"/>
    <div class="text-center flex flex-col">
      <p>Developed by Information System Development &lt;ISD&gt;,</p>
      <p>Student Government Chulalongkorn University</p>
    </div>
  </div>
  <div class="py-4 flex justify-center flex-col w-full items-center bg-white text-black">
    <p class="text-xl font-semibold">Contact Us</p>
    <div class="flex flex-row gap-x-2">
      <div class="flex flex-col mt-3 gap-y-1">
        <img
          src="/common/isd-logo.svg"
          alt="ISD Logo"
          class="h-8 w-auto"
        />
        <a href="https://isd.sgcu.in.th" target="_blank" class="underline font-semibold">
          Website
        </a>
      </div>
      <div class="flex flex-col mt-3 gap-y-1">
        <img
          src="/common/instagram.svg"
          alt="Instagram Logo"
          class="h-8 w-auto"
        />
        <a href="https://www.instagram.com/isd.sgcu/" target="_blank" class="underline font-semibold">
          Instagram
        </a>
      </div>
    </div>
  </div>
</footer>