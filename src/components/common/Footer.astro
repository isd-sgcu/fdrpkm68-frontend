---
import { rpkmThemeConfigs } from "@/config/rpkmTheme";
import { cn } from "@/lib/utils";
import type { RpkmVariant } from "@/types/common";

interface Props {
  variant?: "firstdate" | RpkmVariant;
}

const bgGradient = {
  firstdate: {
    type: "linear",
    classes: "bg-gradient-to-b from-[#324B95] to-[#C6EBC5]",
  },
  ...rpkmThemeConfigs,
};

const { variant = "firstdate" } = Astro.props;

const footerGradient = bgGradient[variant].classes;
---

<footer class="text-xs">
  <div
    class={cn(
      "flex w-full flex-col items-center justify-center py-4 text-white",
      footerGradient
    )}
  >
    <div class="mb-3 flex w-full flex-row justify-center gap-x-1">
      <img src="/common/isd-logo.svg" alt="ISD Logo" class="h-10 w-auto" />
      <img
        src="/common/sgcu-logo.svg"
        alt="ISD Text Logo"
        class="h-10 w-auto"
      />
    </div>
    <div class="flex flex-col text-center">
      <p>พัฒนาโดยฝ่ายพัฒนาระบบสารสนเทศ</p>
      <p>องค์การบริหารสโมสรนิสิตจุฬาลงกรณ์มหาวิทยาลัย</p>
    </div>
    <hr class="m-2 h-1 w-[80px]" />
    <div class="flex flex-col text-center">
      <p>Developed by Information System Development &lt;ISD&gt;,</p>
      <p>Student Government Chulalongkorn University</p>
    </div>
  </div>
  <div
    class="flex w-full flex-col items-center justify-center bg-white py-4 text-black"
  >
    <p class="text-xl font-semibold">Contact Us</p>
    <div class="flex flex-row gap-x-2">
      <div class="mt-3 flex flex-col gap-y-1">
        <img src="/common/isd-logo.svg" alt="ISD Logo" class="h-8 w-auto" />
        <a
          href="https://isd.sgcu.in.th"
          target="_blank"
          class="font-semibold underline"
        >
          Website
        </a>
      </div>
      <div class="mt-3 flex flex-col gap-y-1">
        <img
          src="/common/instagram.svg"
          alt="Instagram Logo"
          class="h-8 w-auto"
        />
        <a
          href="https://www.instagram.com/isd.sgcu/"
          target="_blank"
          class="font-semibold underline"
        >
          Instagram
        </a>
      </div>
    </div>
  </div>
</footer>
